<div class="forms">
<div class="form-horizontal">
  <%= form_for @movie do |f| %>
  <p>
  <%= f.label :title, "Movie Title" %>
  <%= f.text_field :title, :class=>"form-control" %>
  <p>
  <%= f.label :storyline, "Story Line" %>
  <%= f.text_area :storyline , size: "10x5", :class=>"form-control" %>
  <p>
  <%= f.label :release_date, "Release Date" %>
  <%= f.date_select :release_date, :class=>"form-control" %>
  <p>
  <%= f.label :genres, "Genres" %>
  <%= f.text_field :genres, :class=>"form-control" %>
  <p>
  <%= f.label :link, "IMDb Link" %>
  <%= f.text_field :link, :class=>"form-control" %>
  <p>
  <br>
<%= f.submit "Update", :class =>"btn btn-primary"%>

<% end %>


<%= form_for @movie, url: movies_path, method: :delete, authenticity_token: true do |f| %>

<%= f.submit "Delete", :class =>"btn btn-danger"%>

<% end %>
</div>
</div>
