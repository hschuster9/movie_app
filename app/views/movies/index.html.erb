<div class="searchBox">
  <%= form_tag(movies_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Movies",  :class=>"form-control" %>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    <span class="glyphicon glyphicon-search"></span>
  <% end %>
  <% end %>
</div>


<div class="container">
  <div class="row display-flex well">
    <% @movies.each do |movie| %>
      <div class="col-xs-6 col-md-4 movieTitleContainer">
        <h3><%= link_to movie.title, edit_movie_path(movie)  %></h4>
            <%= image_tag(movie.image_url, :alt=>"Movie Poster", :class=>"movieImage") %>
           <!-- <p><%= movie.storyline %></p>
           <p>Release Date: <%= movie.release_date.strftime("%m/%d/%Y")%></p>
           <p>Genres: <%= movie.genres %></p>
            <p><%= link_to "IMDb", movie.movie_url, target: :_blank %></p> -->
          </div>
    <% end %>
  </div>
</div>
