<h5> Add Movie </h5>

<div class="forms">
  <div class="form-horizontal">
    <%= form_for @movie do |f| %>
  <p>
    <%= f.label :title, "Movie Title" %>
    <%= f.text_field :title, :class=>"form-control" %>
  <p>
    <%= f.label :storyline, "Story Line" %>
    <%= f.text_area :storyline, size: "10x5", :class=>"form-control" %>
  <p>
    <%= f.label :release_date, "Release Date" %>
    <%= f.date_select :release_date, {:include_blank => true,:default => nil}  %>
  <p>
    <%= f.label :genres, "Genres" %>
    <%= f.text_field :genres, :class=>"form-control" %>
  <p>
    <%= f.label :link, "IMDb Link" %>
    <%= f.text_field :link, :class=>"form-control" %>
  <p>

  <%= f.submit "Create", :class =>"btn btn-primary"%>

  <% end %>
  </div>
</div>
